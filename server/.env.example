# Example environment variables for the backend
# Copy this file to .env and fill the real values before running in production

# Postgres connection string (required in production)
DATABASE_URL=postgresql://username:password@localhost:5432/contact_tracing

# JWT configuration
JWT_SECRET=replace_with_a_strong_random_string
JWT_EXPIRES_IN=7d

# Server port (Render will override this with the assigned port)
PORT=4000

# Node environment
NODE_ENV=production
PORT=4000
DATABASE_URL=postgresql://postgres:password@localhost:5432/contact_tracing
JWT_SECRET=change_this_secret
JWT_EXPIRES_IN=7d
